{{#if this.mobileInputVisible}}
  <MobileInput
    @type={{this.mobileType}}
    @value={{this.value}}
    @format={{this.format}}
    @disabled={{this.disabled}}
    @readonly={{this.readonly}}
    @showOn={{this.showOn}}
    @decimalMark={{this.decimalMark}}
    @min={{this.min}}
    @max={{this.max}}
    @formattedPlaceholder={{this.placeholder}}
    @onValueChanged={{this.onValueChanged}}
    @selectOnClick={{this.selectOnClick}}
    @onBlurChanged={{this.onBlurChanged}}
    @onBlur={{this.onBlur}}
    @options={{this.options}}
    @autocomplete={{this.autocomplete}}
    @allowNegative={{this.allowNegative}}
    @pattern={{this.pattern}}
    @dataInput={{this.dataInput}}
    @neverNative={{this.neverNative}}
  ></MobileInput>
{{else}}
  <div {{action 'inputClicked' }} role="button">
    {{yield}}
  </div>
{{/if}}
