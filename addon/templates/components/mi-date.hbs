{{#if mobileInputVisible}}
  {{input class="native-input number-input" value=mobileValue type="date" min="1970-01-01" max="9999-01-01" disabled=disabled}}
{{else}}

    <div class="date-input" {{action 'inputClicked'}}>
      {{input class="desktop-input" value=desktopValue disabled=disabled}}
    {{#if showCalendarButton}}
        <button class="calendar-button" disabled={{disabled}}><i class={{calendarClass}}></i></button>
    {{/if}}
    </div>
{{/if}}
