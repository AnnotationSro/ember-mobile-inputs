{{#if showFormatDisabledInput}}
  <input class="desktop-input" value={{formatOnDisabledValue}} disabled="true">
{{else}}
  {{#if mobileInputVisible}}
    {{html-input class="native-input number-input" dataInput=dataInput value=desktopValue type="number" disabled=disabled placeholder=placeholder min=min max=max autocomplete=autocomplete pattern="[0-9]*"}}
  {{else}}
    <span {{action "inputClicked"}} role="button">
      <input class="desktop-input"
      value={{desktopValue}}
      disabled={{disabled}}
      placeholder={{placeholder}}
      min={{min}}
      max={{max}}
      oninput={{action "valueChanged" value="target.value"}}
      onblur={{action "checkRange" value="target.value"}}
      autocomplete={{autocomplete}}
      pattern="[0-9]*"
      >
    </span>
  {{/if}}
{{/if}}
